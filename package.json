{
  "name": "@emmett-community/emmett-google-realtime-db",
  "version": "0.6.0",
  "description": "Google Realtime Database inline projections for Emmett",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./testing": {
      "import": {
        "types": "./dist/testing/index.d.mts",
        "default": "./dist/testing/index.mjs"
      },
      "require": {
        "types": "./dist/testing/index.d.ts",
        "default": "./dist/testing/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:ts": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:int && npm run test:e2e",
    "test:unit": "jest --testMatch \"**/*.unit.spec.ts\" --watchman=false",
    "test:int": "jest --testMatch \"**/*.int.spec.ts\" --watchman=false",
    "test:integration": "npm run test:int",
    "test:e2e": "jest --testMatch \"**/*.e2e.spec.ts\" --watchman=false",
    "test:watch": "jest --watch --watchman=false",
    "test:coverage": "jest --coverage --watchman=false",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "emmett",
    "event-sourcing",
    "projections",
    "realtime-database",
    "google-realtime-database",
    "firebase",
    "cqrs",
    "event-driven",
    "ddd"
  ],
  "author": "Andre X Costa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmett-community/emmett-google-realtime-db.git"
  },
  "bugs": {
    "url": "https://github.com/emmett-community/emmett-google-realtime-db/issues"
  },
  "homepage": "https://github.com/emmett-community/emmett-google-realtime-db#readme",
  "dependencies": {
    "@opentelemetry/api": "^1.0.0"
  },
  "peerDependencies": {
    "@event-driven-io/emmett": "^0.39.0",
    "firebase-admin": "^13.0.0"
  },
  "devDependencies": {
    "@event-driven-io/emmett": "^0.39.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "firebase-admin": "^13.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "testcontainers": "^10.28.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {"access": "public"}
}
